<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee /WEB-INF/schema/web-facesconfig_2_0.xsd" 
              version="2.0" metadata-complete="false">
<application>

	<!-- Dozwolone jezyki -->
 	<locale-config>
      <default-locale>en</default-locale>
      <supported-locale>en-US</supported-locale>
      <supported-locale>pl</supported-locale>
      <supported-locale>pl-PL</supported-locale>
    </locale-config>

</application>

<!-- Deklaracje beanow -->
<managed-bean>
	<managed-bean-name>loginBean</managed-bean-name>
	<managed-bean-class>app.LoginBean</managed-bean-class>
	<managed-bean-scope>request</managed-bean-scope>
	
	<navigation-rule>
		<from-view-id>/web/index.jsp</from-view-id>
	</navigation-rule>

</managed-bean>


</faces-config>